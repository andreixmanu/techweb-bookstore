extends layout 

block content
    .container-fluid(style="display: flex; justify-content: left; margin: 1rem")
        img(src="./image.png" style="width: 200px")
    .container
        article(style="margin:1rem 10rem")
            header(style="margin: 0;")
                hgroup
                    h1(style="margin: 0") Welcome 
                    p Please enter your details.
            form(style="margin: 4rem" action="/user/new" method="POST")
                fieldset
                    label Username 
                        input(type="text" name="username" placeholder="Username" required style="background-color: #f2f2f2;")
                    label Email
                        input(type="email" name="email" placeholder="Email" required style="background-color: #f2f2f2;")
                    label Password
                        input(type="password" name="password" placeholder="Password" required style="background-color: #f2f2f2;")
                    label(style="color: #0172ad;") 
                        a(href="#") Forgot password
                        input(type="hidden" name="role" value="user")
                        button(type="submit" style="margin-top: 1rem") Login
            footer(style="display: flex; justify-content: center") Don't have an account?&nbsp; 
                a(href="#") Sign In 